<h1>Editing post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
  
  <!-- app/views/posts/edit.html.erb -->
  <div id="tags">
    <%= render @post.tags %>
  </div>
  <p>
    
    <%=
      link_to "Add tag", [:add_tag, @post],
        :id     => "add_tag",
        :method => :get,
        :remote => true
    %>
    
  </p>
  
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>